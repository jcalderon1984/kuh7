<?xml version="1.0" encoding="utf-8" ?>

<odoo>
        <record id="ejidos_form" model="ir.ui.view">
                 <field name="name">ejidos.tree</field>
                 <field name="model">ejidos</field>
                 <field name="arch" type="xml">
                         <form>
                             <header>
                       
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                      </header>
                            <sheet>
                                <h1 style="title">
                                    <field name="name" required="1" placeholder="Nombre del Ejido"/>
                                </h1>
                                <group>
                                <group>
                                     <field name="calle"/>
                                     <field name="numero"/>
                                     <field name="colonia"/>
                                     <field name="cp"/>
                                     <field name="ciudad"/>
                                     <field name="estado"/>
                                     <field name="pais"/>
                                     <field name="categoria_id"/>
                                 </group>
                                <group>
                                    <field name="acta"/>
                                    <field name="convenio"/>
                                </group>
                                </group>
                            </sheet>

                         </form>
                 </field>
        </record>
</odoo>
